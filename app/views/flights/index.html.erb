<%= form_with url: :root, method: :get do |form| %>
  <%= form.select "from_code", options_from_collection_for_select(Airport.all, "code", :code) %>

  <%= form.select "to_code", options_from_collection_for_select(Airport.all, "code", :code) %>

  <%= form.select :num_tickets, [["1"], ["2"], ["3"], ["4"]] %>

  <%= form.select "date", Flight.get_dates %>

  <%= form.submit "Search" %>
<% end %>

<% if params.has_key?(:date) %>
  <% if @search_res.present? %>
    <%= form_with url: "bookings/new", method: :get do |form| %>
      <%= form.collection_radio_buttons(:flight_id, @search_res, :id, :details)%>
      <br>
      <%= form.submit "Select" %>
    <% end %>
  <% else %>
    No results found
  <% end %>
<% end %>
